<section class="farm card">
  <div class="card-header">
    <h1><%= @farm.name %></h1>
    <span class="card-meta">
      <%= @farm.location %>
    </span>
  </div>

  <div class="card-body">
    <h2>Veggies</h2>
    <% if @farm.vegetables.any? %>
      <ul>
      <% @farm.vegetables.each do |vegetable| %>
        <li><a href="/vegetables/<%= vegetable.id %>"><%= vegetable.name %></a></li>
      <% end %>
      </ul>
    <% else %>
      <p>There aren't any veggies for this farm yet!</p>
    <% end %>
    
    <% if @farm.user == current_user %>
      <a href="/vegetables/new" class="btn btn-outline-info btn-sm">+ Add a veggie</a>
    <% end %>
  </div>
  
  <% if @farm.user == current_user %>
    <div class="card-footer">
      <a href="/farms/<%= @farm.id %>/<%= @farm.slug %>/edit">Edit farm</a>
    </div>
  <% end %>
</section>
