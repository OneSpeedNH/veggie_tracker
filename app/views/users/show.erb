<h1><%= @user.username %>'s Dashboard</h1>

<h2>My Farms</h2>

<% @user.farms.each do |farm| %>
  <h3><a href="/farms/<%= farm.id %>/<%= farm.slug %>"><%= farm.name %></a></h3>
  <ul>
  <% farm.vegetables.each do |vegetable| %>
    <li><%= vegetable.name %></li>
  <% end %>
  </ul>
<% end %>

<a href="/farms/new" class="btn btn-success">Add a new farm</a>
