<h1>Add a vegetable</h1>
<form method="POST" action="/vegetables">
  <h2>Vegetable details</h2>
  <div class="form-group">
		<label for="name">Name of vegetables</label>
		<input type="text" id="name" name="name" class="form-control">
	</div>
	
	<div class="form-group">
	  <p>Planting months:</p>
	
  	<% Date::MONTHNAMES.each do |month| %>
    	<div class="form-check">
      	<input class="form-check-input" type="checkbox" name="months[]" value="<%= month %>" id="<%= month %>">
    		<label class="form-check-label" for="<%= month %>"><%= month %></label>
    	</div>
  	<% end %>
	</div>
	
	<h2>Farms</h2>
	<div class="form-group">
  	<% @user.farms.each do |farm| %>
    	<div class="form-check">
    		<input class="form-check-input" type="checkbox" name="farm_ids[]" value="<%= farm.id %>" id="farm_<%= farm.id %>">
    		<label class="form-check-label" for="farm_<%= farm.id %>"><%= farm.name %></label>
    	</div>
  	<% end %>
	</div>
	
	<button type="submit" id="submit" class="btn btn-primary">Add vegetable</button>
</form>