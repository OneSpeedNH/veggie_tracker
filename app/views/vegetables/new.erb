<div class="form card">
  <div class="card-header">
    <h1><%= t('vegetables.form.new.title') %></h1>
  </div>

  <div class="card-body">
    <form method="POST" action="/<%= I18n.locale %>/vegetables">
      <h2><%= t('vegetables.form.details') %></h2>
      <div class="form-group">
        <label for="vegetable[name]"><%= t('vegetables.form.name') %></label>
        <input type="text" id="name" name="vegetable[name]" class="form-control">
    	</div>

      <div class="form-group">
        <p><%= t('vegetables.form.planting_months') %></p>

        <% t('date.month_names').each.with_index do |month, index| %>
          <% if index >= 1 %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="vegetable[planting_season][]" value="<%= index %>" id="<%= month %>">
              <label class="form-check-label" for="<%= month %>"><%= month %></label>
            </div>
          <% end %>
        <% end %>
      </div>

      <h2><%= t('vegetables.form.farms') %></h2>
      <div class="form-group">
        <% @user.farms.each do |farm| %>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="vegetable[farm_ids][]" value="<%= farm.id %>" id="farm_<%= farm.id %>">
            <label class="form-check-label" for="farm_<%= farm.id %>"><%= farm.name %></label>
          </div>
        <% end %>
      </div>

      <button type="submit" id="submit" class="btn btn-info"><%= t('vegetables.form.new.submit') %></button>
    </form>
  </div>
</div>