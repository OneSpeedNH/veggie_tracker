<h1>Add a vegetable</h1>
<form method="POST" action="/vegetables/<%= @vegetable.id %>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  
  <h2>Vegetable details</h2>
  <div class="form-group">
		<label for="name">Name of vegetable</label>
		<input class="form-control" type="text" id="name" name="vegetable[name]" value="<%= @vegetable.name %>">
	</div>
	
	<div class="form-group">
	  <p>Planting months:</p>
	
  	<% Date::MONTHNAMES.each.with_index do |month, index| %>
  	  <% if index >= 1 %>
      	<div class="form-check">
        	<input class="form-check-input" type="checkbox" name="vegetable[planting_season][]" value="<%= index %>" id="<%= month %>" <%= 'checked' if @vegetable.planting_months_as_numbers.include?(index) %>>
      		<label class="form-check-label" for="<%= month %>"><%= month %></label>
      	</div>
      <% end %>
  	<% end %>
	</div>
	
	<h2>Farms</h2>
	<div class="form-group">
  	<% @user.farms.each do |farm| %>
    	<div class="form-check">
    		<input class="form-check-input" type="checkbox" name="vegetable[farm_ids][]" value="<%= farm.id %>" id="farm_<%= farm.id %>" <%= 'checked' if farm.vegetables.include?(@vegetable) %>>
    		<label class="form-check-label" for="farm_<%= farm.id %>"><%= farm.name %></label>
    	</div>
  	<% end %>
	</div>
	
	<button type="submit" id="submit" class="btn btn-primary">Save</button>
</form>

<form method="POST" action="/vegetables/<%= @vegetable.id %>">
  <input type="hidden" id="hidden" name="_method" value="delete">
  <div class="form-group">
		<input type="submit" id="delete" class="btn btn-outline-danger btn-sm" value="Delete vegetable">
	</div>
</form>